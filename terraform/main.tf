#####################################################################################################
# providers
#####################################################################################################
provider "aws" {

}

#####################################################################################################
# resources
#####################################################################################################
resource "aws_cloud9_environment_ec2" "my-ide" {
  name = "c9-ide"
  instance_type = "t2.micro"
  automatic_stop_time_minutes = 30
  description = "A browser based IDE on AWS."
  tags = {
    name = "practice tag"
  }
}

#####################################################################################################
# data
#####################################################################################################
data "aws_instance" "cloud9_instance" {
  filter {
    name = "tag:aws:cloud9:environment"
    values = [aws_cloud9_environment_ec2.my-ide.id]
  }
}
